varying float mult;

uniform sampler2D texture;
varying vec2 texcoord;

void main()
{
	vec3 color;
	color = vec3((87.0-208.0)*mult + 208.0, (146.0-175.0)*mult + 175.0, (37.0-111.0)*mult + 111.0)/256.0;
	gl_FragColor = 1.5*vec4(color, 1.0)*(texture2D(texture, texcoord)*.7 + .15*texture2D(texture, texcoord/100.0) + .15*texture2D(texture, texcoord/1000.0));
}