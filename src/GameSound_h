#include "Main.h"

#ifndef GameSound_h
#define GameSound_h

class GameSound
{
    public:
        GameSound();
        ~GameSound();
        
        Movie theSound;
        
        bool IsPlaying;
        
        void ReadSoundFile(const Str255 filename);
        void Play();
        void Repeat();
        void SetVolume(short volume);
        void Mute();
        void Pause();
        void Resume();
        void Stop();
        void GiveTime(long time);
        
        void Update();
		
		void CleanUpSound();
};

#endif